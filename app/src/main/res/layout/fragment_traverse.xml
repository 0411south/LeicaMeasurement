<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Step Indicator -->
    <include
        android:id="@+id/connection_status_bar"
        layout="@layout/layout_connection_status"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step1_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1. 测站设置"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/step2_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 后视定向" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/step3_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. 前视测量" />
    </LinearLayout>

    <!-- Step 1: Station Setup -->
    <LinearLayout
        android:id="@+id/step1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/station_e"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E (m)" />

        <EditText
            android:id="@+id/station_n"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="N (m)" />

        <EditText
            android:id="@+id/station_h"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="H (m)" />

        <EditText
            android:id="@+id/instrument_height"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="仪器高 (m)" />

        <Button
            android:id="@+id/btn_confirm_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认设置" />
    </LinearLayout>

    <!-- Step 2: Backsight -->
    <LinearLayout
        android:id="@+id/step2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- Add Backsight UI elements here -->
    </LinearLayout>

    <!-- Step 3: Foresight -->
    <LinearLayout
        android:id="@+id/step3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- Add Foresight UI elements here -->
    </LinearLayout>
</LinearLayout>