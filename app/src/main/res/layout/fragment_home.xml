<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.fragment.HomeFragment">

    <!-- 1. 蓝牙连接区域 -->
    <LinearLayout
        android:id="@+id/bluetooth_connection_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_status_red" /> <!-- Default to red, will be created -->

        <TextView
            android:id="@+id/connection_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="未连接"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_connect_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索设备" />

    </LinearLayout>

    <!-- 2. 当前测站信息卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/station_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/bluetooth_connection_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前测站信息"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="E: 5000.000 m   N: 3000.000 m   H: 100.000 m"
                android:fontFamily="monospace" 
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="仪器高：1.500 m   棱镜高：1.600 m"
                android:fontFamily="monospace"
                android:textSize="16sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 3. 快捷操作按钮 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_traverse_measurement"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="导线测量"/>

        <Button
            android:id="@+id/btn_detail_point_measurement"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="碎步点测量"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>